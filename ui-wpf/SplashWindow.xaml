<Window x:Class="MigracaoAD.UI.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Width="640" Height="360" Background="#121826" AllowsTransparency="True" ShowInTaskbar="False" Topmost="True">
  <Grid>
    <Border CornerRadius="12" Background="#0F172A" Padding="24" BorderBrush="#2A3446" BorderThickness="1">
      <StackPanel>
        <TextBlock Text="{Binding AppTitle}" FontSize="26" FontWeight="Bold" Foreground="#E5E7EB"/>
        <TextBlock TextWrapping="Wrap" Foreground="#9CA3AF" Text="Assistente guiado para migração de Active Directory e espelhamento de arquivos, preservando ACLs e minimizando downtime."/>
        <TextBlock TextWrapping="Wrap" Foreground="#9CA3AF" Text="{Binding Tagline}" Margin="0,2,0,0"/>
        <Separator/>
        <StackPanel>
          <TextBlock Text="Desenvolvido por:" Foreground="#9CA3AF"/>
          <TextBlock Text="{Binding DeveloperName}" FontWeight="SemiBold" Foreground="#E5E7EB"/>
          <TextBlock Text="{Binding Copyright}" Foreground="#9CA3AF"/>
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="Links:" Foreground="#9CA3AF"/>
            <TextBlock>
              <Hyperlink NavigateUri="{Binding LinkedIn}" RequestNavigate="Link_RequestNavigate">LinkedIn</Hyperlink>
            </TextBlock>
            <TextBlock>
              <Hyperlink NavigateUri="{Binding GitHub}" RequestNavigate="Link_RequestNavigate">GitHub</Hyperlink>
            </TextBlock>
            <TextBlock>
              <Hyperlink NavigateUri="{Binding Instagram}" RequestNavigate="Link_RequestNavigate">Instagram</Hyperlink>
            </TextBlock>
            <TextBlock>
              <Hyperlink NavigateUri="{Binding Email}" RequestNavigate="Link_RequestNavigate">Email</Hyperlink>
            </TextBlock>
          </StackPanel>
          <TextBlock Foreground="#9CA3AF" TextWrapping="Wrap" Margin="0,6,0,0">
            Licença Proprietária — Todos os direitos reservados. Para licenciamento comercial, envie e-mail.
          </TextBlock>
        </StackPanel>
      </StackPanel>
    </Border>
  </Grid>
</Window>

