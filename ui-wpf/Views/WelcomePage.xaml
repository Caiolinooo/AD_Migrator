      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <StackPanel Margin="12">
    <TextBlock Text="Bem-vindo" FontSize="24" FontWeight="Bold"/>
    <TextBlock Text="Assistente de migração Active Directory e Shares."/>
    <Border Padding="12" Background="#1fffffff" CornerRadius="6">
