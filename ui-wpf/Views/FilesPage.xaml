<Page x:Class="MigracaoAD.UI.Views.FilesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <StackPanel Margin="12">
    <TextBlock Text="Arquivos (Espelho)" FontSize="20" FontWeight="Bold"/>
    <TextBlock Text="Escolha como manter espelho entre servidores e preservar ACLs."/>
    <CheckBox Content="DFSN (Namespace)" IsChecked="{Binding UseDFSN, Mode=TwoWay}"/>
    <CheckBox Content="DFSR (Replicação)" IsChecked="{Binding UseDFSR, Mode=TwoWay}"/>
    <CheckBox Content="Robocopy (pré-cópia + delta/corte)" IsChecked="{Binding UseRobocopy, Mode=TwoWay}"/>
    <Border Padding="8" Background="#1fffffff" CornerRadius="6" Margin="0,8,0,0">
      <TextBlock TextWrapping="Wrap" Text="Hint: Para acesso global sem VPN, considere SMB over QUIC (Server 2022). Caso contrário, use DFSR entre on‑prem e nuvem e Shadow Copies em ambos os lados."/>
    </Border>
  </StackPanel>
</Page>

