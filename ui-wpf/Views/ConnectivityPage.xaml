<Page x:Class="MigracaoAD.UI.Views.ConnectivityPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <StackPanel Margin="12">
    <TextBlock Text="Conectividade" FontSize="20" FontWeight="Bold"/>
    <TextBlock TextWrapping="Wrap" Text="Escolha o modo de conexão temporária para migração. 'Tunnel' é recomendado; 'Direct' exige abrir portas por IP (Kerberos/LDAP/RPC/DNS/etc.)."/>
    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
      <TextBlock Text="Modo:" VerticalAlignment="Center"/>
      <ComboBox Width="180" SelectedValue="{Binding ConnectivityMode, Mode=TwoWay}">
        <ComboBoxItem Content="Tunnel"/>
        <ComboBoxItem Content="Direct"/>
      </ComboBox>
    </StackPanel>
    <UniformGrid Columns="2" Rows="2" Margin="0,8,0,0">
      <TextBlock Text="RPC Port Min"/>
      <TextBox Text="{Binding RpcPortMin, Mode=TwoWay}" ToolTip="Faixa RPC reduzida para Direct (ex.: 49152)"/>
      <TextBlock Text="RPC Port Max"/>
      <TextBox Text="{Binding RpcPortMax, Mode=TwoWay}" ToolTip="Faixa RPC reduzida para Direct (ex.: 49252)"/>
    </UniformGrid>
    <Border Padding="8" Background="#1f00ff00" CornerRadius="6" Margin="0,8,0,0">
      <TextBlock TextWrapping="Wrap" Text="Hint: Se for Direct, crie regras por IP fixo entre origem↔destino para DNS(53), Kerberos(88/464), LDAP/LDAPS(389/636), SMB(445), GC(3268/3269), RPC(135) e faixa RPC."/>
    </Border>
  </StackPanel>
</Page>

