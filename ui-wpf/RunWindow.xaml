<Window x:Class="MigracaoAD.UI.RunWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Execução" Height="520" Width="900" WindowStartupLocation="CenterOwner"
        Background="#0F172A">
  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <TextBlock Text="Execução do Plano" FontSize="18" FontWeight="Bold"/>
    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
      <TextBox x:Name="LogBox" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True"
               Background="#0B1220" Foreground="#E5E7EB" BorderBrush="#1E293B"/>
    </ScrollViewer>
    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
      <CheckBox x:Name="DryRun" Content="Dry-run"/>
      <Button Content="Fechar" Click="Close_Click"/>
      <Button x:Name="RunBtn" Content="Iniciar" Click="Run_Click"/>
    </StackPanel>
  </Grid>
</Window>

