<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Paleta moderna clara com alto contraste -->
  <SolidColorBrush x:Key="AppBg" Color="#F8FAFC"/>
  <SolidColorBrush x:Key="HeaderBg" Color="#FFFFFF"/>
  <SolidColorBrush x:Key="SideBg" Color="#FFFFFF"/>
  <SolidColorBrush x:Key="FooterBg" Color="#F1F5F9"/>
  <SolidColorBrush x:Key="CardBg" Color="#FFFFFF"/>

  <!-- Texto -->
  <SolidColorBrush x:Key="TextPrimary" Color="#0F172A"/>
  <SolidColorBrush x:Key="TextSecondary" Color="#64748B"/>
  <SolidColorBrush x:Key="TextMuted" Color="#94A3B8"/>

  <!-- Bordas -->
  <SolidColorBrush x:Key="BorderColor" Color="#E2E8F0"/>
  <SolidColorBrush x:Key="BorderHover" Color="#CBD5E1"/>

  <!-- Acentos -->
  <SolidColorBrush x:Key="Accent" Color="#3B82F6"/>
  <SolidColorBrush x:Key="AccentHover" Color="#2563EB"/>
  <SolidColorBrush x:Key="AccentPressed" Color="#1D4ED8"/>
  <SolidColorBrush x:Key="Success" Color="#10B981"/>
  <SolidColorBrush x:Key="Warning" Color="#F59E0B"/>
  <SolidColorBrush x:Key="Error" Color="#EF4444"/>

  <!-- Estados -->
  <SolidColorBrush x:Key="HoverBg" Color="#F1F5F9"/>
  <SolidColorBrush x:Key="SelectedBg" Color="#DBEAFE"/>
  <SolidColorBrush x:Key="DisabledBg" Color="#F8FAFC"/>
  <SolidColorBrush x:Key="DisabledText" Color="#CBD5E1"/>
</ResourceDictionary>

