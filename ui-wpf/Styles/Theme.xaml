<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="Colors.xaml"/>
  </ResourceDictionary.MergedDictionaries>

  <!-- Estilo base para Window -->
  <Style TargetType="Window">
    <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
    <Setter Property="FontFamily" Value="Segoe UI"/>
    <Setter Property="FontSize" Value="14"/>
  </Style>

  <!-- Estilo para TextBlock -->
  <Style TargetType="TextBlock">
    <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="TextWrapping" Value="Wrap"/>
  </Style>

  <!-- Estilo para Label -->
  <Style TargetType="Label">
    <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="FontWeight" Value="Medium"/>
    <Setter Property="Margin" Value="0,8,0,4"/>
  </Style>

  <!-- Estilo para TextBox -->
  <Style TargetType="TextBox">
    <Setter Property="Margin" Value="0,4,0,12"/>
    <Setter Property="Padding" Value="10,0,10,0"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="Background" Value="{StaticResource CardBg}"/>
    <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Height" Value="40"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
    <Setter Property="VerticalScrollBarVisibility" Value="Disabled"/>
    <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="TextBox">
          <Border Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  CornerRadius="6">
            <Grid Margin="10,0">
              <ScrollViewer x:Name="PART_ContentHost"
                            VerticalScrollBarVisibility="Disabled"
                            HorizontalScrollBarVisibility="Disabled"
                            VerticalAlignment="Center"
                            Focusable="False"/>
            </Grid>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter Property="BorderBrush" Value="{StaticResource BorderHover}"/>
            </Trigger>
            <Trigger Property="IsFocused" Value="True">
              <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
              <Setter Property="BorderThickness" Value="2"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Estilo para PasswordBox -->
  <Style TargetType="PasswordBox">
    <Setter Property="Margin" Value="0,4,0,12"/>
    <Setter Property="Padding" Value="12,10"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="Background" Value="{StaticResource CardBg}"/>
    <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Height" Value="40"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="PasswordBox">
          <Border Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  CornerRadius="6">
            <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter Property="BorderBrush" Value="{StaticResource BorderHover}"/>
            </Trigger>
            <Trigger Property="IsFocused" Value="True">
              <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
              <Setter Property="BorderThickness" Value="2"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Estilo para Button -->
  <Style TargetType="Button">
    <Setter Property="Margin" Value="4"/>
    <Setter Property="Padding" Value="16,10"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="FontWeight" Value="Medium"/>
    <Setter Property="Background" Value="{StaticResource Accent}"/>
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="Height" Value="40"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Border Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  CornerRadius="6"
                  Padding="{TemplateBinding Padding}">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter Property="Background" Value="{StaticResource AccentHover}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
              <Setter Property="Background" Value="{StaticResource AccentPressed}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
              <Setter Property="Background" Value="{StaticResource DisabledBg}"/>
              <Setter Property="Foreground" Value="{StaticResource DisabledText}"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Estilo para CheckBox -->
  <Style TargetType="CheckBox">
    <Setter Property="Margin" Value="0,8,0,8"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
  </Style>

  <!-- Estilo para ComboBox -->
  <Style TargetType="ComboBox">
    <Setter Property="Margin" Value="0,4,0,12"/>
    <Setter Property="Padding" Value="12,10"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="Background" Value="{StaticResource CardBg}"/>
    <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Height" Value="40"/>
  </Style>

  <!-- Estilo para ListBox -->
  <Style TargetType="ListBox">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="0"/>
    <Setter Property="FontSize" Value="14"/>
  </Style>

  <!-- Estilo para ListBoxItem -->
  <Style TargetType="ListBoxItem">
    <Setter Property="Padding" Value="16,12"/>
    <Setter Property="Margin" Value="0,2"/>
    <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="ListBoxItem">
          <Border Background="{TemplateBinding Background}"
                  BorderThickness="0"
                  CornerRadius="6"
                  Padding="{TemplateBinding Padding}"
                  Margin="{TemplateBinding Margin}">
            <ContentPresenter/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter Property="Background" Value="{StaticResource HoverBg}"/>
              <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
              <Setter Property="Background" Value="{StaticResource SelectedBg}"/>
              <Setter Property="Foreground" Value="{StaticResource Accent}"/>
              <Setter Property="FontWeight" Value="SemiBold"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Estilo para ScrollViewer -->
  <Style TargetType="ScrollViewer">
    <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
    <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
  </Style>

  <!-- Estilo para Border (Cards) -->
  <Style x:Key="Card" TargetType="Border">
    <Setter Property="Background" Value="{StaticResource CardBg}"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="8"/>
    <Setter Property="Padding" Value="20"/>
    <Setter Property="Margin" Value="0,0,0,16"/>
  </Style>

  <!-- Estilo para Expander -->
  <Style TargetType="Expander">
    <Setter Property="Margin" Value="0,8,0,8"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
  </Style>
</ResourceDictionary>

